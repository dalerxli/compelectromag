fespace Ph(Gh,P0);
Ph reg = region;
int rE  = reg(4,4);  // frame
int rI  = reg(0,4);  // vacuum
int rB  = reg(ballstart[0],ballstart[1]);  // ball region

macro setEps(num) (reg==rE||reg==rB)*epsilon1[num] + (reg==rI)*epsilon2[num]  // EOM
Ph e11 = setEps(0);
Ph e12 = setEps(1);
Ph e13 = setEps(2);
Ph e21 = setEps(3);
Ph e22 = setEps(4);
Ph e23 = setEps(5);
Ph e31 = setEps(6);
Ph e32 = setEps(7);
Ph e33 = setEps(8);

//~ plot(e11, fill=true, value=true, dim=3, cmm = "e11");
plot3d(e11, "e11");


fespace Vh(Gh,P2);
Vh phi, w;

//~ problem LaplaceVarf(phi,w,solver=CG) = int2d(Gh)(
problem LaplaceVarf(phi,w) = int2d(Gh)(
            e11 * dx(phi)*dx(w)
					+ e12 * dx(phi)*dy(w)	    
					+ e21 * dy(phi)*dx(w)
					+ e22 * dy(phi)*dy(w))
					+ on(Lboxdown,phi = 2)
					+ on(Lboxup,phi = -2);
LaplaceVarf;
//~ plot(phi, fill=true, value=true, dim=3, cmm = "phi");


Vh Ex = dx(phi);
Vh Ey = dy(phi);
Vh Ez = dx(phi)*0;
//~ plot(Ey, fill=true, value=true, dim=3, cmm = "Ey");


Vh D1 = Ex * e11 + Ey * e12 + Ez * e13;
Vh D2 = Ex * e21 + Ey * e22 + Ez * e23;
Vh D3 = Ex * e31 + Ey * e32 + Ez * e33;
Vh T11 = Ex * D1  + 0.5 * (Ex*D1 + Ey*D2 + Ez*D3  );
Vh T22 = Ey * D2  + 0.5 * (Ex*D1 + Ey*D2 + Ez*D3  );
Vh T33 = Ez * D3  + 0.5 * (Ex*D1 + Ey*D2 + Ez*D3  );
Vh T12 = Ex * D2 ;
Vh T21 = Ey * D1 ;
Vh T13 = Ex * D3 ;
Vh T23 = Ex * D3 ;
Vh f1 = dx(T11)+dy(T21);
Vh f2 = dx(T21)+dy(T22);

plot([f1,f2], cmm="forces");


